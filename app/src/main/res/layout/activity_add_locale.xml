<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.g6.jumpclient.Add.AddLocale">

    <ImageButton
        android:id="@+id/localeImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:onClick="imageButtonClicked"
        />
    <EditText
        android:id="@+id/localeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter locale name"
        />
    <EditText
        android:id="@+id/localeDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter locale description"
        />
    <Button
        android:id="@+id/addLocaleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Locale"
        android:onClick="addLocaleButtonClicked"
        />

    </LinearLayout>
</ScrollView>
